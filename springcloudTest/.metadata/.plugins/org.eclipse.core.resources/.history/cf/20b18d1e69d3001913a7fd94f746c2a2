<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjlemon.oa.mapper.UserMapper">

    <resultMap id="UserRM" type="com.bjlemon.oa.domain.User">
        <id property="id" column="user_id"/>
        <result property="loginName" column="login_name"/>
        <result property="password" column="user_password"/>
        <result property="name" column="user_name"/>
        <result property="gender" column="user_gender"/>
        <result property="telephone" column="user_telephone"/>
        <result property="email" column="user_email"/>
        <result property="remark" column="user_remark"/>
        <result property="imagePath" column="user_image_path"/>
        <association property="department" column="department_id" javaType="com.bjlemon.oa.domain.Department">
            <id property="id" column="department_id"/>
            <result property="name" column="department_name"/>
            <result property="description" column="department_description"/>
            <result property="level" column="department_level"/>
        </association>
        <collection property="userRoleSet" column="user_id" ofType="com.bjlemon.oa.domain.UserRole">
            <id property="id" column="user_role_id"/>
            <association property="role" column="role_id" javaType="com.bjlemon.oa.domain.Role">
                <id property="id" column="role_id"/>
                <result property="name" column="role_name"/>
                <result property="description" column="role_description"/>
            </association>
        </collection>
    </resultMap>

    <select id="findAll" resultMap="UserRM">
        SELECT
          u.user_id,
          u.user_name,
          u.user_password,
          u.login_name,
          u.user_email,
          u.user_gender,
          u.user_image_path,
          u.user_remark,
          u.user_telephone,
          d.department_id,
          d.department_name,
          d.department_level,
          d.department_description,
          r.role_id,
          r.role_name,
          r.role_description
        FROM oa_user u
          LEFT JOIN oa_department d
            ON u.department_id = d.department_id
          LEFT JOIN oa_user_role ur
            ON u.user_id = ur.user_id
          LEFT JOIN oa_role r
            ON r.role_id = ur.role_id
    </select>

    <insert id="add" parameterType="com.bjlemon.oa.domain.User" useGeneratedKeys="true">
        /*返回刚才添加的主键*/
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT
        INTO
            oa_user(login_name, user_password, user_name, user_gender, user_telephone, user_email, user_remark,
            user_image_path, department_id)
        VALUES
          (#{loginName},#{password},#{name},#{gender},#{telephone},#{email},#{remark},#{imagePath},#{department.id})
    </insert>
<select id="findByQueryVo" parameterType="com.bjlemon.oa.vo.UserQueryVo" resultMap="UserRM">

        SELECT
          u.user_id,
          u.user_name,
          u.user_password,
          u.login_name,
          u.user_email,
          u.user_gender,
          u.user_image_path,
          u.user_remark,
          u.user_telephone,
          d.department_id,
          d.department_name,
          d.department_level,
          d.department_description,
          r.role_id,
          r.role_name,
          r.role_description
        FROM oa_user u
          LEFT JOIN oa_department d
            ON u.department_id = d.department_id
          LEFT JOIN oa_user_role ur
            ON u.user_id = ur.user_id
          LEFT JOIN oa_role r
            ON r.role_id = ur.role_id
            WHERE login_name = #{loginName}
            AND
            user_password = #{password}
</select>
</mapper>