#配置服务器信息
server:
  port: 8001


#数据库信息配置
spring:
  application:
    name: microservicecloud-provider-dept  #应用名称
  datasource:
    url: jdbc:mysql://localhost:3306/springboot-oa?useUnicode=true&characterEncoding=UTF-8&serverTimezone=UTC&verifyServerCertificate=false&useSSL=false
    username: root
    password: root
    driver-class-name: com.mysql.jdbc.Driver
    type: com.alibaba.druid.pool.DruidDataSource

mybatis:
  mapper-locations: classpath:mapper/*.xml
  configuration:
    map-underscore-to-camel-case: true #开启驼峰命名
    cache-enabled: true #开启二级缓存

#客户端注册进eureka服务列表 
eureka:
  client:
    service-url:
      defaultZone: http://localhost:7001/eureka
    instance:
      instance-id: study-springcloud-dept8001 #服务实例名称修改
      #prefer-ip-address: true #访问路径显示IP地址
    